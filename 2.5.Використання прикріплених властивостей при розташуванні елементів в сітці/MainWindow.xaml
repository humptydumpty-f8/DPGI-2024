<Window x:Class="_2._5.Використання_прикріплених_властивостей_при_розташуванні_елементів_в_сітці.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2._5.Використання_прикріплених_властивостей_при_розташуванні_елементів_в_сітці"
        mc:Ignorable="d"
        Title="Lection 2-6" Height="450" Width="800">
    <!--Робимо сітку видимою-->
    <Grid>
        <!--Задаємо сітку у вигляді трьох рядків-->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--Використовуємо приєднані властивості Grid.Row для розташування елементів в рядках сітки-->
        <TextBox x:Name="txtHeigt" Text="400" Grid.Row="0" />
        <TextBox x:Name="txtWidth" Text="600" Grid.Row="1" />
        <Button x:Name="btnOk" Content="Ok" Grid.Row="2" Click="btnOk_Click"/>
    </Grid>
</Window>
