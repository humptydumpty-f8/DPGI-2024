<Window x:Class="_5._1.Визначення_і_застосування_простого_стилю.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5._1.Визначення_і_застосування_простого_стилю"
        mc:Ignorable="d"
        Title="Lection 5-1" Height="450" Width="800">
    
    <!--Визначення стиля-->
    <Window.Resources>
        <Style x:Key="BigFontStyle">
            <Setter Property="Control.FontFamily" Value="Time New Roman"/>
            <Setter Property="Control.FontSize" Value="18"></Setter>
            <Setter Property="Control.FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <StackPanel Orientation="Vertical">
            <!--Явне застосування стилю-->
            <Label Style="{StaticResource BigFontStyle}">Label</Label>
            <TextBox Style="{StaticResource BigFontStyle}">TextoBx</TextBox>
            <Button Style="{StaticResource BigFontStyle}">Button</Button>
        </StackPanel>
    </Grid>
</Window>
