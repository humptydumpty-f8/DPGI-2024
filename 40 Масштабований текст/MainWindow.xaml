<Window x:Class="_40_Масштабований_текст.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_40_Масштабований_текст"
        mc:Ignorable="d"
        Title="Lection 4-0" Height="450" Width="800">
    <Grid>
        <DockPanel Margin="20">
            <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center">
                <Button x:Name="btnPlus" Width="100" FontSize="30" Margin="10" Click="btnPlus_Click">+</Button>
                <Button x:Name="btnMinus" Width="100" FontSize="30" Margin="10" Click="btnMinus_Click">-</Button>
            </WrapPanel>
            <TextBlock x:Name="txtBlock" FontFamily="Arial" FontWeight="Bold" FontStyle="Italic" Cursor="No" TextWrapping="Wrap" FontSize="20">
                В Бахчисараї фельд’єґер зумів одягнути ящірці жовтий капюшон!
            </TextBlock>
        </DockPanel>


    </Grid>
</Window>
