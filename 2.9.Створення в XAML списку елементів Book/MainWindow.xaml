<Window x:Class="_2._9.Створення_в_XAML_списку_елементів_Book.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2._9.Створення_в_XAML_списку_елементів_Book"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--Додаємо елемент ListBox -->
        <ListBox x:Name="bookList">
            <TextBox FontWeight="Bold">Book list</TextBox>
            <!--Додаємо в список два обєкти типу Book-->
            <ListBoxItem>
                <local:Book Name="Тошнота" Author="Жан-Поль Сартр" YearPublished="1938"/>
            </ListBoxItem>
            <ListBoxItem>
                <local:Book Name="Чума" Author="Альбер Камю" YearPublished="1948"/>
            </ListBoxItem>
            <Button x:Name="btnOk" Width="100" Click="btnOk_Click">Ok</Button>
        </ListBox>
    </Grid>
</Window>
