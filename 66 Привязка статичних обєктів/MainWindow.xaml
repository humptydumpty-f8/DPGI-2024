<Window x:Class="WpfApp14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp14"
        mc:Ignorable="d"
        Title="Lection 6-6" Height="450" Width="800">
    <Grid>
        <Border Margin="10" BorderBrush="Silver" BorderThickness="3" Padding="8">
            <Expander Header="Fonts Parameters" IsExpanded="True">
                <StackPanel>
                    <Label>Font Family</Label>
                    <TextBlock Background="Aquamarine" Text="{Binding Source={x:Static SystemFonts.CaptionFontFamily},Path=Source}"/>
                    <Label>Font Size</Label>
                    <TextBlock Background="Aquamarine" Text="{Binding Source={x:Static SystemFonts.CaptionFontSize} }"/>
                    <Label>Font Weight</Label>
                    <TextBlock Background="Aquamarine" Text="{Binding Source={x:Static SystemFonts.CaptionFontWeight} }"/>
                </StackPanel>
            </Expander>
        </Border>
    </Grid>
</Window>
