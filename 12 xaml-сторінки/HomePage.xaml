<Page x:Class="_12_xaml_сторінки.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_12_xaml_сторінки"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home Page" ShowsNavigationUI="False">

    <Grid>
        <DockPanel>
            <TextBlock DockPanel.Dock="Bottom">
                <Hyperlink NavigateUri="ParametersPage.xaml">Paraneters</Hyperlink>
            </TextBlock>
            <GroupBox Header="Text editor"
                  BorderThickness="2"
                  BorderBrush="Black">
                <TextBox x:Name="txtBox" TextWrapping="Wrap" >Some text</TextBox>
            </GroupBox>

        </DockPanel>
    </Grid>
</Page>
