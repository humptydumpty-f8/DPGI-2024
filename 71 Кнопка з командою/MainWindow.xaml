<Window x:Class="WpfApp22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp22"
        mc:Ignorable="d"
        Title="Lection 7-1" Height="450" Width="800">

    <Window.CommandBindings>
        <!--Привязка команди-->
        <CommandBinding Command="ApplicationCommands.Help" Executed="HelpCommandBinding_Executed"  CanExecute="HelpCommandBinding_CanExecute" />
    </Window.CommandBindings>
    
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!--Джерело команди-->
            <Button Command="ApplicationCommands.Help">Help</Button>
        </StackPanel>
    </Grid>
</Window>
