<Window x:Class="_3._4.DockPanel_в_макеті_простого_редактора.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3._4.DockPanel_в_макеті_простого_редактора"
        mc:Ignorable="d"
        Title="Lection 3-4" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <Label  HorizontalAlignment="Center" DockPanel.Dock="Top">Область редагування</Label>
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Bottom">
                <Button x:Name="btnCansale" Margin="15 10" Click="btnConsole_Click">Скасувати</Button>
                <Button x:Name="btnSave" Margin="15 10" Click="btnSave_Click">Зберегти</Button>
            </WrapPanel>
            <TextBox x:Name="txtBox" Margin="10 5" Background="Beige" BorderBrush="AliceBlue" BorderThickness="2"></TextBox>
        </DockPanel>
    </Grid>
</Window>
